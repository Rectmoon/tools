*
  margin 0
  padding 0
  box-sizing border-box

body
  background-color orange
  height 100vh
  display flex
  justify-content center
  align-items center

.box
  width 200px
  height 200px
  background-color lightblue
  transform scale(0.8)

.react-hot-loader-error-overlay
  position fixed
  box-sizing border-box
  left 0px
  top 0px
  right 0px
  bottom 0px
  width 100vw
  height 100vh
  background-color rgba(0, 0, 0, 0.85)
  color rgb(232, 232, 232)
  font-family Menlo, Consolas, monospace
  font-size large
  padding 2rem
  line-height 1.2
  white-space pre-wrap
  overflow auto
