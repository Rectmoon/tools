border-bottom-1px($color)
  position relative

  &:after
    display block
    position absolute
    left 0
    bottom 0
    border-bottom 1px solid $color
    width 100%
    content ''
    transform-origin 0 0
    -webkit-transform-origin 0 0
    transform scaleY(0.5)
    -webkit-transform scaleY(0.5)