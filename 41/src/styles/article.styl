.dxy-article
  font 16px / 1.7 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif
  color #333

  body, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, textarea, p, blockquote, th, td, hr, button, article, aside, details, figcaption, figure, footer, header, menu, nav, section
    margin 0
    padding 0

  p, pre, ul, ol, dl, form, hr, table, blockquote
    margin-bottom 1.2em

  article, aside, details, figcaption, figure, footer, header, menu, nav, section
    display block

  audio, canvas, video
    display inline-block

  body, button, input, select, textarea
    font 16px / 1.7 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif

  button::-moz-focus-inner, input::-moz-focus-inner
    padding 0
    border 0

  h1, h2, h3, h4, h5, h6
    color #262b30
    margin-top 1.2em
    margin-bottom 0.6em
    line-height 1.35

  h1
    font-size 24px

  h2
    font-size 20px

  h3
    font-size 16px

  h4
    font-size 14px

  h5
    font-size 14px
    color #8490a6

  h6
    font-size 12px
    color #8490a6

  ul, ol
    padding-left 55px

  ul
    list-style disc

  ol
    list-style decimal

  li ul, li ol
    margin-bottom 0.8em

  li
    list-style inherit

  blockquote
    position relative
    color #8490a6
    font-weight 400
    border-left 4px solid #d3dce6
    padding-left 30px
    margin 55px 0 55px 0

  @media only screen and (max-width: 640px)
    blockquote
      margin 1em 0

  table
    border-collapse collapse
    border-spacing 0

  fieldset, img
    border 0

  del
    text-decoration line-through

  address, caption, cite, code, dfn, em, th, var
    font-style normal
    font-weight 400

  caption, th
    text-align left

  q:before, q:after
    content ''

  table th, table td, table caption
    border 1px solid #ddd
    padding 0.5em 1em
    color #666

  table th
    background #fbfbfb

  table thead th
    background #f1f1f1

  table caption
    border-bottom none

  sub, sup
    font-size 75%
    line-height 0
    position relative

  :root sub, :root sup
    vertical-align baseline

  sup
    top -0.5em

  sub
    bottom -0.25em

  acronym, abbr
    border-bottom 1px dotted
    font-variant normal

  abbr
    cursor help

  hr
    border none
    border-bottom 1px solid #cfcfcf
    margin-bottom 0.8em
    height 10px

  em, legend, caption
    color #000
    font-weight inherit

  strong, b
    font-weight bold
    color #000

  [draggable]
    cursor move

  mark
    background #fffdd1
    border-bottom 1px solid #ffedce
    padding 2px
    margin 0 5px

  small, figcaption
    font-size 0.9em
    color #888

  pre, code, pre tt
    font-family Courier, 'Courier New', monospace

  pre
    background #f8f8f8
    border 1px solid #ddd
    padding 1em 1.5em
    display block
    -webkit-overflow-scrolling touch

  a
    color #6770e0

  a:hover
    border-bottom 1px solid #6770e0
    color #6770e0
    text-decoration none

  ins, a
    text-decoration none