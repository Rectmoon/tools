@import './mixin.styl'

.mask
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.7)
  position fixed
  left 0
  top 0
  right 0
  bottom 0

.content
  width 100%
  height 100%
  position absolute
  top 50%
  left 0
  transition all 0.3s linear

  &.top
    top 50px

  .title
    height 60px
    line-height 60px
    position relative
    background-color #fff

    .controller
      display flex

      li
        flex 1

    .circle
      width 100px
      height 100px
      border-radius 50%
      position absolute
      right 20px
      top -50px
      z-index 50
      background-color yellow
      text-align center
      line-height 100px

  .wrapper
    height 560px
    background-color lightblue
    overflow hidden

    .list
      .item
        height 100px
        line-height 100px
        text-align center
        border-bottom-1px(#fff)